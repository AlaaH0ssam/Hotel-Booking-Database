-- Create the GUEST table
CREATE TABLE Guest (
    Guest_Id NUMBER PRIMARY KEY,
    Fname VARCHAR2(50),
    Lname VARCHAR2(50),
    date_of_birth DATE,
    email VARCHAR2(100),
    country_key VARCHAR2(5),
    phone_number VARCHAR2(15),
    nationality VARCHAR2(50)
);

-- Create the ROOM table
CREATE TABLE Room (
    room_Id NUMBER PRIMARY KEY,
    capacity NUMBER,
    Price NUMBER(10, 2),
    Type VARCHAR2(50),
    Room_view VARCHAR2(100),
    Availability VARCHAR2(10)
);

-- Create the BOOKING table
CREATE TABLE Booking (
    booking_Id NUMBER PRIMARY KEY,
    checking_in_date DATE,
    checking_out_date DATE,
    booking_date DATE,
    number_of_guests NUMBER,
    status VARCHAR2(20),
    duration NUMBER,
    Guest_Id NUMBER,
    CONSTRAINT fk_booking_guest FOREIGN KEY (Guest_Id) REFERENCES Guest(Guest_Id)
);

-- Create the PAYMENT table
CREATE TABLE Payment (
    payment_Id NUMBER PRIMARY KEY,
    payment_Date DATE,
    Payment_Method VARCHAR2(50),
    Price NUMBER(10, 2),
    status VARCHAR2(20),
    Booking_Id NUMBER,
    CONSTRAINT fk_payment_booking FOREIGN KEY (Booking_Id) REFERENCES Booking(booking_Id)
);
-- Create the MAINTENANCE table
CREATE TABLE Maintenance (
    maintenance_Id NUMBER PRIMARY KEY,
    cost NUMBER(10, 2),
    status VARCHAR2(50),
    description VARCHAR2(200),
    date_issue_reported DATE,
    date_issue_solved DATE,
    room_Id NUMBER,
    CONSTRAINT fk_maintenance_room FOREIGN KEY (room_Id) REFERENCES Room(room_Id)
);
-- Create the SERVICE table
CREATE TABLE Service (
    service_Id NUMBER PRIMARY KEY,
    name VARCHAR2(50),
    Price NUMBER(10, 2),
    description VARCHAR2(200),
    Booking_Id NUMBER,
    CONSTRAINT fk_service_booking FOREIGN KEY (Booking_Id) REFERENCES Booking(booking_Id)
);

-- Create the SUPPLIER table
CREATE TABLE Supplier (
    Supplier_Id NUMBER PRIMARY KEY,
    Name VARCHAR2(100),
    email VARCHAR2(100),
    Phone VARCHAR2(15),
    Address VARCHAR2(200)
);

-- Create the ITEM table
CREATE TABLE Item (
    Item_Id NUMBER PRIMARY KEY,
    Name VARCHAR2(100),
    Price NUMBER(10, 2),
    Quantity NUMBER,
    Supplier_Id NUMBER,
    CONSTRAINT fk_item_supplier FOREIGN KEY (Supplier_Id) REFERENCES Supplier(Supplier_Id)
);

-- Create the EMPLOYEE table
CREATE TABLE Employee (
    Employee_Id NUMBER PRIMARY KEY,
    Name VARCHAR2(100),
    Start_Date DATE,
    Salary NUMBER(10, 2),
    Phone VARCHAR2(15),
    email VARCHAR2(100)
);

-- Create the DEPARTMENT table
CREATE TABLE Department (
    Department_Id NUMBER PRIMARY KEY,
    Name VARCHAR2(50),
    Number_Of_Employees NUMBER
);

